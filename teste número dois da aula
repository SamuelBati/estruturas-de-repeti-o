#include<stdio.h>
main(){

  int num1, num2, soma, opcao;

  do{
    printf("Digite os numeros");
      scanf("%d %d", &num1, &num2);
    
    soma= num1+num2;
    printf("Soma e igual a:%d", soma);
    
    printf("Se deseja repetir a operação digite qualquer outro numero, se deseja encerrar, digite zero 0");
      scanf("%d", &opcao);
  
  }while(opcao!=0);

  printf("saiu do lupe");

}
